#!/usr/bin/env xdg-open
[Desktop Entry]
Version=1.0
Type=Application
Name=Sublime Text
GenericName=Text Editor
Comment=Sophisticated text editor for code, markup and prose
Exec=/home/alexander/Programs/SublimeText/sublime_text %F
Terminal=false
MimeType=text/plain;
Icon=/home/alexander/Programs/SublimeText/Icon/48x48/sublime-text.png
Categories=TextEditor;Development;
StartupNotify=true
Actions=Window;Document;

[Desktop Action Window]
Name=New Window
Exec=/home/alexander/Programs/SublimeText/sublime_text -n
OnlyShowIn=Unity;

[Desktop Action Document]
Name=New File
Exec=/home/alexander/Programs/SublimeText/sublime_text --command new_file
OnlyShowIn=Unity;
